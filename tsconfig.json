{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": ["ESNext"]
  },
  "include": ["src/**/*", "src/types/global.d.ts"],
  "exclude": ["node_modules", "lib", "**/*.test.ts", "tests"]
}
